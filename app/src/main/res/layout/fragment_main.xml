<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" tools:showIn="@layout/activity_main">

    <LinearLayout android:id="@+id/mainView"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_gravity="left|top"
                  android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@drawable/shape1"
                android:orientation="horizontal">

            <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/CardView.Light">
                <LinearLayout android:orientation="vertical"
                              android:layout_width="match_parent"
                              android:layout_height="match_parent">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/updateClock" android:layout_gravity="center"
                            android:textSize="@dimen/abc_text_size_display_1_material"
                            tools:targetApi="jelly_bean_mr1" android:text="更新时间"/>

                    <ImageView android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:id="@+id/barCodeView"
                               android:adjustViewBounds="false" android:src="@drawable/logo"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout android:id="@+id/statusView"
                          android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:layout_weight="2"
                          android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <com.lingya.farmintell.ui.SensorCardView android:id="@+id/tv11"
                                                             android:layout_width="0dp"
                                                             android:layout_height="match_parent"
                                                             android:layout_weight="1"
                                                             android:orientation="vertical"/>
                    <com.lingya.farmintell.ui.SensorCardView android:id="@+id/tv12"
                                                             android:layout_width="0dp"
                                                             android:layout_height="match_parent"
                                                             android:layout_weight="1"
                                                             android:orientation="vertical"
                            />
                    <com.lingya.farmintell.ui.SensorCardView android:id="@+id/tv13"
                                                             android:layout_width="0dp"
                                                             android:layout_height="match_parent"
                                                             android:layout_weight="1"
                                                             android:orientation="vertical"/>
                    <com.lingya.farmintell.ui.SensorCardView android:id="@+id/tv14"
                                                             android:layout_width="0dp"
                                                             android:layout_height="match_parent"
                                                             android:layout_weight="1"
                                                             android:orientation="vertical"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <com.lingya.farmintell.ui.SensorCardView android:id="@+id/tv21"
                                                             android:layout_width="0dp"
                                                             android:layout_height="match_parent"
                                                             android:layout_weight="1"
                                                             android:orientation="vertical"
                            />
                    <com.lingya.farmintell.ui.SensorCardView android:id="@+id/tv22"
                                                             android:layout_width="0dp"
                                                             android:layout_height="match_parent"
                                                             android:layout_weight="1"
                                                             android:orientation="vertical"
                            />
                    <com.lingya.farmintell.ui.SensorCardView android:id="@+id/tv23"
                                                             android:layout_width="0dp"
                                                             android:layout_height="match_parent"
                                                             android:layout_weight="1"
                                                             android:orientation="vertical"
                            />
                    <com.lingya.farmintell.ui.SensorCardView android:id="@+id/tv24"
                                                             android:layout_width="0dp"
                                                             android:layout_height="match_parent"
                                                             android:layout_weight="1"
                                                             android:orientation="vertical"
                            />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <com.lingya.farmintell.ui.SensorCardView android:id="@+id/tv31"
                                                             android:layout_width="0dp"
                                                             android:layout_height="match_parent"
                                                             android:layout_weight="1"
                                                             android:orientation="vertical"
                            />
                    <com.lingya.farmintell.ui.SensorCardView android:id="@+id/tv32"
                                                             android:layout_width="0dp"
                                                             android:layout_height="match_parent"
                                                             android:layout_weight="1"
                                                             android:orientation="vertical"
                            />
                    <com.lingya.farmintell.ui.SensorCardView android:id="@+id/tv33"
                                                             android:layout_width="0dp"
                                                             android:layout_height="match_parent"
                                                             android:layout_weight="1"
                                                             android:orientation="vertical"
                            />
                    <com.lingya.farmintell.ui.SensorCardView android:id="@+id/tv34"
                                                             android:layout_width="0dp"
                                                             android:layout_height="match_parent"
                                                             android:layout_weight="1"
                                                             android:orientation="vertical"
                            />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.CardView android:id="@+id/chartView"
                                            android:orientation="vertical"
                                            android:layout_width="fill_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1"
                                            android:layout_gravity="center_horizontal"
                                            style="@style/CardView.Light"/>

    </LinearLayout>
</FrameLayout>
