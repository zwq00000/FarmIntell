<resources>
    <declare-styleable name="GaugeView">
        <attr name="fontSize" format="dimension" />
        <attr name="pointSize" format="integer" />
        <attr name="pointColor" format="color" />
        <attr name="strokeColor" format="color" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="strokeCap" format="enum">
            <enum name="BUTT" value="0" />
            <enum name="ROUND" value="1" />
            <enum name="SQUARE" value="2" />
        </attr>
        <attr name="startAngle" format="integer" />
        <attr name="sweepAngle" format="integer" />
        <attr name="minValue" format="integer" />
        <attr name="maxValue" format="integer" />
        <attr name="value" format="float" />
        <attr name="valueFormatPattern" format="string" />
        <attr name="fontColor" format="color" />
    </declare-styleable>
</resources>
